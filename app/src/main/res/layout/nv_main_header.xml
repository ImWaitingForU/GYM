<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_navigation_header"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header"/>

    <TextView
        android:id="@+id/tv_des_navigation_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_navigation_header"
        android:layout_centerHorizontal="true"
        android:text="用户描述信息"
        android:textColor="#ffffff"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_name_navigation_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_des_navigation_header"
        android:layout_centerHorizontal="true"
        android:text="用户ID"
        android:textColor="#ffffff"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/nv_userAvatar_navigation_header"
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/tv_name_navigation_header"
        android:src="@mipmap/ic_launcher"
        android:layout_height="100dp"/>

</RelativeLayout>


